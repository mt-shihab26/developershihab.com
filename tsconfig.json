{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "strictNullChecks": true,
        "allowJs": true,
        "lib": ["es2022", "dom", "dom.iterable"],
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["**/node_modules/*", "node_modules", "dist"]
}
