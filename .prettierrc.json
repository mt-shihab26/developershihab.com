{
	"plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": "*.svg",
			"options": {
				"parser": "html",
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"tabWidth": 4,
				"proseWrap": "preserve"
			}
		}
	],
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100
}
