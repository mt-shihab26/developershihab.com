{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": "*.svg",
			"options": {
				"parser": "html",
				"htmlWhitespaceSensitivity": "ignore"
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"tabWidth": 4,
				"proseWrap": "preserve"
			}
		}
	],
	"plugins": [
		"prettier-plugin-organize-imports",
		"prettier-plugin-astro",
		"prettier-plugin-tailwindcss"
	]
}
