---
interface Props {
    technologies: string[];
}
---

<div class="flex flex-wrap space-x-2">
    {
        Astro.props.technologies.map((tech) => (
            <p class="relative z-10 flex items-center rounded-md bg-zinc-100 px-2 py-1 text-xs font-medium text-zinc-800 transition-colors group-hover:bg-zinc-200 group-hover:text-zinc-900 dark:bg-zinc-700 dark:text-zinc-300 dark:group-hover:bg-zinc-600 dark:group-hover:text-zinc-100">
                {tech}
            </p>
        ))
    }
</div>
