---
import type { TCertification } from '@/types';

import Img from './Img.astro';

interface Props {
	certification: TCertification;
}

const {
	certification: { title, description, date, logo, alt, href }
} = Astro.props as Props;
---

<a
	class="relative rounded-2xl border border-border bg-primary-foreground px-5 py-3 text-muted-foreground transition-all hover:border-foreground/25 hover:shadow-sm"
	href={href}
	target="_blank"
>
	{!!logo && <Img src={logo} alt={alt} class="mb-3 h-11 w-auto lg:absolute lg:-left-16 lg:mb-0" />}
	<div class="flex flex-col gap-y-1.5">
		<h2 class="text-lg font-medium text-foreground">{title}</h2>
		<p>{description}</p>
		<date>{date}</date>
	</div>
</a>
