---
import FormattedDate from "@/components/elements/FormattedDate";

// interface Props {
// 	as: any;
// 	withDesc?: boolean;
// 	blog: TBlog;
// }

const {
    withDesc = false,
    blog: {
        data: { title, description, date, draft },
        slug
    }
} = Astro.props;
---

<li class="flex flex-col gap-2 sm:flex-row sm:gap-x-4 [&_q]:basis-full">
    <FormattedDate className="min-w-[120px]" date={date.updated ?? date.publish} />
    <div>
        {draft && <span class="text-red-500">(Draft) </span>}
        <a
            href={`/blogs/${slug}?back=/`}
            class="transition-all hover:text-muted-foreground"
            data-astro-prefetch
        >
            {title}
        </a>
        {
            withDesc && (
                <p class="line-clamp-3 block text-sm italic text-muted-foreground">{description}</p>
            )
        }
    </div>
</li>
