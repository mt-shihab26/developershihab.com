---
import type { TArticle } from "~/lib/articles";

import { time } from "~/lib/time";

import { Card, CardCta, CardDescription, CardEyebrow, CardTitle } from "~/components/ui/card";

import Paragraph from "./paragraph.astro";

interface Props {
    articles: TArticle[];
}

const props = Astro.props;
---

<div class="flex flex-col gap-16">
    <div class="flex flex-col gap-16">
        {
            props.articles.map((article) => (
                <Card as="article">
                    <CardTitle href={`/articles/${article.slug}`}>{article.data.title}</CardTitle>
                    <CardEyebrow as="time" decorate>
                        {time.formatToLongDate(article.data.date)}
                    </CardEyebrow>
                    <CardDescription>{article.data.description}</CardDescription>
                    <CardCta>Read article</CardCta>
                </Card>
            ))
        }
    </div>
    <Paragraph>
        <a href="/articles">Read more articles</a>
    </Paragraph>
</div>
