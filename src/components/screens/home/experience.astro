---
import { experiences } from "~/config/experiences";
import { cn } from "~/lib/utils";

import { BriefcaseIcon } from "~/components/icons/briefcase-icon";

import DownloadResume from "./download-resume2.astro";
---

<div class="rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40">
    <h2 class="flex items-center space-x-2 text-sm font-semibold text-zinc-900 dark:text-zinc-100">
        <BriefcaseIcon className="h-5 w-5 flex-none" />
        <a href="/experience" class="underline underline-offset-2" data-astro-prefetch>Experience</a
        >
    </h2>
    <ol class="mt-6 space-y-4">
        {
            experiences.map((experience) => (
                <li class="flex gap-4">
                    <div
                        class={cn(
                            "relative mt-1 flex h-10 w-10 flex-none items-center justify-center",
                            "rounded-full shadow-md ring-1 shadow-zinc-800/5 ring-zinc-900/5 dark:border",
                            "dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0"
                        )}
                    >
                        <img src={experience.logo} alt="" class="h-7 w-7" />
                    </div>
                    <dl class="flex flex-auto flex-wrap gap-x-2">
                        <dt class="sr-only">Company</dt>
                        <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100">
                            {experience.company}
                        </dd>
                        <dt class="sr-only">Role</dt>
                        <dd class="text-xs text-zinc-500 dark:text-zinc-400">{experience.role}</dd>
                        <dt class="sr-only">Date</dt>
                        <dd
                            class="ml-auto text-xs text-zinc-500 dark:text-zinc-500"
                            aria-label={`${experience.start} until ${experience.end}`}
                        >
                            <time date-time={experience.start}>{experience.start}</time>{" "}
                            <span aria-hidden="true">â€”</span>{" "}
                            <time date-time={experience.end}>{experience.end}</time>
                        </dd>
                    </dl>
                </li>
            ))
        }
    </ol>
    <DownloadResume />
</div>
