---
import { Card, CardContent } from "@/components/ui/card";

import certifications from "@/config/certifications";

import Section from "./Section";
---

<Section title="Certifications">
    {
        certifications.map((certification) => {
            const { title, description, date, logo, alt, href } = certification;
            return (
                <a href={href} target="_blank" rel="noopener noreferrer">
                    <Card className="relative transition-all hover:border-foreground/25 hover:shadow-sm">
                        <CardContent className="p-5">
                            {logo && (
                                <img
                                    src={logo.src}
                                    alt={alt || ""}
                                    class="mb-3 h-11 w-auto lg:absolute lg:-left-16 lg:mb-0"
                                />
                            )}
                            <div class="flex flex-col gap-y-1.5">
                                <h2 class="text-lg font-medium text-foreground">{title}</h2>
                                <p class="text-muted-foreground">{description}</p>
                                <time class="text-muted-foreground">{date}</time>
                            </div>
                        </CardContent>
                    </Card>
                </a>
            );
        })
    }
</Section>
