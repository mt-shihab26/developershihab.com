---
import { Card, CardContent } from "@/components/ui/card";

import educations from "@/config/educations";

import Section from "./Section";
---

<Section title="Education">
    {
        educations.map((education) => {
            const { institute, department, date, logo, alt, description, points } = education;
            return (
                <Card className="relative">
                    <CardContent className="p-5">
                        {logo && (
                            <img
                                src={logo.src}
                                alt={alt || ""}
                                class="mb-3 h-12 w-auto lg:absolute lg:-left-16 lg:mb-0"
                            />
                        )}
                        <div class="flex flex-col gap-y-1.5">
                            <h2 class="text-lg font-medium text-foreground">{institute}</h2>
                            <p class="text-muted-foreground">{department}</p>
                            <p class="text-muted-foreground">{description}</p>
                            {points && points?.length > 0 && (
                                <ul class="ml-4 list-disc text-muted-foreground">
                                    {points.map((point) => (
                                        <li>{point}</li>
                                    ))}
                                </ul>
                            )}
                            <time class="text-muted-foreground">{date}</time>
                        </div>
                    </CardContent>
                </Card>
            );
        })
    }
</Section>
