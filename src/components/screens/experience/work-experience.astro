---
import { experiences } from "~/config/experiences";

import { BadgeCheckIcon } from "~/components/icons/badge-check-icon";
import { Building2Icon } from "~/components/icons/building-2-icon";
---

<section>
    <h2
        class="mb-10 flex items-center gap-3 text-2xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100"
    >
        <Building2Icon className="h-6 w-6" />
        Work Experience
    </h2>
    <div class="space-y-8">
        {
            experiences.map((exp) => (
                <div class="rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40">
                    <div class="flex items-center gap-4">
                        <div class="relative flex h-10 w-10 flex-none items-center justify-center rounded-full shadow-md ring-1 shadow-zinc-800/5 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
                            <img src={exp.logo} alt={exp.company} class="h-7 w-7" />
                        </div>
                        <div class="flex-auto">
                            <h3 class="text-lg font-semibold text-zinc-800 dark:text-zinc-100">
                                {exp.company}
                            </h3>
                            <div class="flex items-center gap-2">
                                <span class="text-sm text-zinc-600 dark:text-zinc-400">
                                    {exp.role}
                                </span>
                                <span class="text-zinc-400 dark:text-zinc-500">â€¢</span>
                                <span class="text-sm text-zinc-500 dark:text-zinc-500">
                                    {exp.start} - {exp.end}
                                </span>
                            </div>
                        </div>
                    </div>
                    <p class="mt-4 text-sm text-zinc-600 dark:text-zinc-400">{exp.description}</p>
                    <ul class="mt-4 space-y-2">
                        {exp.highlights.map((highlight) => (
                            <li class="flex items-start gap-2 text-sm text-zinc-600 dark:text-zinc-400">
                                <BadgeCheckIcon className="h-5 w-5 flex-none text-teal-500" />
                                <span>{highlight}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>
</section>
