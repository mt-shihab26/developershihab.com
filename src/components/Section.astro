---
import { cn } from '@/utils/tailwind';

const { class: className, title } = Astro.props;
---

<section class={cn(className, 'flex flex-col gap-y-5 lg:flex-row lg:gap-y-0')}>
	<div class="text-xl font-semibold lg:w-1/3">
		<h2>{title}</h2>
	</div>
	<div class="flex flex-col gap-y-3 lg:w-2/3">
		<slot />
	</div>
</section>
