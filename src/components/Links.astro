---
import { cn } from '@/utils/tailwind';

export interface Props {
	links: { link: string; label: string }[];
	class?: string;
}

const { links, class: className } = Astro.props as Props;
---

<div class={cn('grid grid-cols-1 gap-2 lg:grid-cols-2', className)}>
	{
		links.map((link) => (
			<a
				class="w-full rounded-2xl border border-border bg-primary-foreground px-5 py-2 text-sm transition-all hover:border-foreground/25 hover:shadow-sm"
				href={link.link}
				target="_blank"
				rel="noopener noreferrer"
			>
				{link.label}
			</a>
		))
	}
</div>
