---
import { cn } from '@/utils/tailwind';

import Button2 from './Button2.astro';

const { as = 'span', class: className, type, technologies } = Astro.props;
---

<div class="flex flex-row flex-wrap items-center gap-x-4 gap-y-2">
	{
		!!type && (
			<Button2
				as={as}
				style="pill"
				class={cn('bg-secondary text-secondary-foreground hover:bg-primary-foreground', className)}
			>
				{type}
			</Button2>
		)
	}
	{
		technologies.map((technology: string) => (
			<Button2 as={as} style="pill" class={cn('hover:bg-primary-foreground', className)}>
				{technology}
			</Button2>
		))
	}
</div>
