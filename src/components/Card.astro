const {
	as: Tag = 'div',
	class: className,
	href,
	heading,
	subheading,
	date,
	imagePath,
	altText,
	imageClass,
	target = '',
	loading
} = Astro.props;
---

<Tag
	class={cn(
		'relative rounded-2xl border border-border bg-primary-foreground px-5 py-3',
		href ? 'transition-all hover:border-foreground/25 hover:shadow-sm' : '',
		className
	)}
	href={href}
	target={target}
>
	{
		!!imagePath && (
			<Img
				src={imagePath}
				alt={altText}
				loading={loading}
				class={cn('mb-3 lg:absolute lg:mb-0', imageClass)}
			/>
		)
	}
	<div class="flex flex-col gap-y-1.5">
		<div class="flex flex-col gap-y-0.5">
			<h1 class="text-lg font-medium">{heading}</h1>
			<h2 class="text-muted-foreground">{subheading}</h2>
			<date class="text-muted-foreground">{date}</date>
		</div>
		<slot />
	</div>
</Tag>
