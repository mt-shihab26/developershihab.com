---
import "~/styles/global.css";

import type { THead } from "~/types/utils";

import Head from "./head.astro";

type Props = THead;

const { title, description, keywords } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
    <Head title={title} description={description} keywords={keywords} />
    <body class="font-sans leading-tight text-gray-700 antialiased selection:bg-red-500 selection:text-white">
        <slot />
    </body>
</html>
