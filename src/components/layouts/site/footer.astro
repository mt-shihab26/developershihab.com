---
import { github, linkedin, twitter } from "@/lib/information";

import LinkedinIcon from "@/components//icons/linkedin.astro";
import XIcon from "@/components//icons/x.astro";
import GithubIcon from "@/components//icons/github.astro";

const links = [
    {
        name: "Github",
        icon: GithubIcon,
        url: github,
    },
    {
        name: "Linkedin",
        icon: LinkedinIcon,
        url: linkedin,
    },
    {
        name: "X",
        icon: XIcon,
        url: twitter,
    },
];
---

<footer class="w-full border-t border-dashed md:border-b">
    <div
        class="mx-auto flex max-w-3xl flex-col-reverse items-center justify-between gap-4 border-dashed px-4 py-3 md:border-x lg:flex-row"
    >
        <p class="text-sm text-foreground/70">
            Fork from <a
                href="https://github.com/Louai-Zokerburg/louai"
                class="font-medium text-primary underline underline-offset-4"
                >Louai.b</a
            > â€¢ source code available on <a
                href="https://github.com/mt-shihab26/developershihab.com"
                class="font-medium text-primary underline underline-offset-4"
                >Github</a
            >
        </p>

        <div class="flex items-center justify-center gap-4">
            {
                links.map(link => (
                    <a href={link.url} aria-label={link.name}>
                        <link.icon className="size-4 duration-150 hover:text-primary" />
                    </a>
                ))
            }
        </div>
    </div>
</footer>
