---
import "~/styles/global.css";

import Head, { type THead } from "./head.astro";
import Header from "./header.astro";

type Props = THead;

const { title, description, keywords } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
    <Head title={title} description={description} keywords={keywords} />
    <body class="font-sans leading-tight text-gray-700 antialiased selection:bg-red-500 selection:text-white">
        <div id="app" class="px-6 py-8 md:px-16 lg:px-24 lg:py-16">
            <Header />
            <div class="mt-12 lg:pl-32">
                <div class="max-w-2xl">
                    <slot />
                </div>
            </div>
        </div>
    </body>
</html>
