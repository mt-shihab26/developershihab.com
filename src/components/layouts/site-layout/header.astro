---
import { cn } from "~/lib/utils";
import { headerLinks } from "~/lib/links";

const name = "Shihab Mahamud";
const avatar = "https://avatars.githubusercontent.com/u/67628903";
const pathname = Astro.url.pathname;
---

<div class="relative z-20 flex items-center justify-between">
    <div class="flex max-w-full items-center md:block lg:flex">
        <div class="flex-no-shrink mb-0 flex pr-4 md:mb-4 md:pr-6 lg:mb-0 lg:pr-12">
            <a href="/" class="flex items-center no-underline">
                <img class="h-10 w-10 rounded-full md:h-12 md:w-12 lg:h-20 lg:w-20" src={avatar} alt="" />
            </a>
        </div>
        <div>
            <a
                href="/"
                class="block text-xl leading-none font-extrabold text-black no-underline lg:text-3xl lg:leading-tight"
            >
                {name}
            </a>
            <div class="mt-3 hidden space-x-6 text-xs tracking-wide uppercase md:flex lg:mt-4">
                {
                    headerLinks.map((link) => (
                        <a
                            href={link.href}
                            class={cn("font-semibold text-gray-500 no-underline hover:text-black", {
                                "text-black": pathname === link.href
                            })}
                        >
                            {link.label}
                        </a>
                    ))
                }
            </div>
        </div>
    </div>

    <!-- Mobile Toggle Button -->
    <div class="block md:hidden">
        <button id="menu-toggle" class="block">
            <svg id="icon-open" class="block h-6 w-6 text-black" fill="currentColor" viewBox="0 0 20 20">
                <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
            </svg>
            <svg id="icon-close" class="hidden h-6 w-6 text-black" fill="currentColor" viewBox="0 0 20 20">
                <path
                    d="M10 8.586L2.929 1.515 1.515 2.929 8.586 10l-7.071 7.071 1.414 1.414L10 11.414l7.071 7.071 1.414-1.414L11.414 10l7.071-7.071-1.414-1.414L10 8.586z"
                >
                </path>
            </svg>
        </button>
    </div>
</div>

<!-- Mobile Menu -->
<div id="mobile-menu" class="fixed z-10 hidden h-full w-full bg-white pt-24 md:hidden">
    <div class="max-h-full space-y-8 overflow-y-auto px-12 pt-6 pb-8">
        {
            headerLinks.map((link) => (
                <a
                    href={link.href}
                    class={cn("block font-bold text-gray-500 no-underline hover:text-black", {
                        "text-black": pathname === link.href
                    })}
                >
                    {link.label}
                </a>
            ))
        }
    </div>
</div>

<!-- JavaScript Toggle Logic -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("menu-toggle");
        const menu = document.getElementById("mobile-menu");
        const iconOpen = document.getElementById("icon-open");
        const iconClose = document.getElementById("icon-close");

        if (!toggle || !menu || !iconOpen || !iconClose) {
            console.error("Menu toggle elements not found.");
            return;
        }

        toggle.addEventListener("click", () => {
            const isOpen = menu.classList.contains("block");

            menu.classList.toggle("hidden", isOpen);
            menu.classList.toggle("block", !isOpen);

            iconOpen.classList.toggle("hidden", !isOpen);
            iconClose.classList.toggle("hidden", isOpen);
        });
    });
</script>
