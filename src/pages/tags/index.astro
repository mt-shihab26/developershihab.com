---
import Back from "@/components/elements/Back";
import Layout from "@/components/screens/layout/Layout.astro";

import { suffixTitle } from "@/config/site";
import { getUniqueTagsWithCount } from "@/lib/blogs";

const tags = await getUniqueTagsWithCount();
---

<Layout
    title={suffixTitle("Tags")}
    description="A list of all the topics I've written about in my posts"
>
    <div class="w-full">
        <Back href="/blogs" client:load />
        <h1 class="mb-6 mt-5 text-2xl font-bold">Tags</h1>
        {tags.length === 0 && <p>No posts yet.</p>}
        {
            tags.length > 0 && (
                <ul class="flex flex-col gap-y-3">
                    {tags.map(([tag, val]) => (
                        <li class="flex items-center gap-x-2">
                            <a
                                class="inline-block underline hover:text-foreground/75"
                                data-astro-prefetch
                                href={`/tags/${tag}/`}
                                title={`View posts with the tag: ${tag}`}
                            >
                                &#35;{tag}
                            </a>
                            <span class="inline-block">
                                - {val} post{val > 1 && "s"}
                            </span>
                        </li>
                    ))}
                </ul>
            )
        }
    </div>
</Layout>
