---
import { avatar, name, bio, links } from "~/config/about";

import { getArticles } from "~/lib/articles";
import { formatDate } from "~/lib/utils";
import { navigationLinks } from "~/lib/links";

import BaseLayout from "~/components/layouts/base-layout/index.astro";
import Back from "~/components/elements/back.astro";

export const getStaticPaths = async () => {
    return (await getArticles()).map((a) => ({ params: { slug: a.slug }, props: { article: a } }));
};

const { article } = Astro.props;
const { Content } = await article.render();
---

<BaseLayout
    title={`${article.data.title} - ${name}`}
    description={article.data.description}
    keywords={article.data.tags}
>
    <div class="relative mx-auto max-w-3xl space-y-10 px-4 py-14 sm:px-6 lg:px-8">
        <Back />

        <header class="flex items-center">
            <div>
                <a href="/">
                    <img class="inline-block h-15 w-15 rounded-full" src={avatar} alt="" />
                </a>
            </div>
            <div class="pl-4 text-sm leading-snug">
                <p class="text-base">
                    <a href="/" class="font-semibold text-black">{name}</a>
                </p>
                <div class="text-gray-500">
                    <p class="">{bio}</p>
                    <p>{formatDate(article.data.date)}</p>
                </div>
            </div>
        </header>

        <main class="space-y-6">
            <h1 class="text-4xl leading-tight font-extrabold tracking-tight">
                {article.data.title}
            </h1>
            <p class="relative z-10">
                {article.data.description}
            </p>
            {
                article.data.dev_to && (
                    <div class="flex items-center text-base text-zinc-400">
                        Also published at{" "}
                        <a target="_blank" href={links.devTo + article.data.dev_to} class="ml-2 underline">
                            dev.to
                        </a>
                    </div>
                )
            }
            <div class="prose prose-lg max-w-none text-xl">
                <Content />
            </div>
        </main>

        <footer class="px-4 sm:px-6">
            <nav class="mx-auto max-w-3xl space-x-4 text-center text-sm">
                {
                    navigationLinks.map((link) => (
                        <a href={link.href} class="text-gray-500 hover:text-black">
                            {link.label}
                        </a>
                    ))
                }
            </nav>
        </footer>

        <Back />
    </div>
</BaseLayout>
