---
import { getArticles } from "~/lib/articles";

import { SimpleLayout } from "~/components/screens/articles/simple-layout";
import { Article } from "~/components/screens/articles/article";

import Layout from "~/components/layouts/Layout.astro";

const headline = "I write about things I’m learning and things I’m building.";

const articles = await getArticles();
---

<Layout name="Articles" pathname="/articles" description={headline}>
    <SimpleLayout
        title={headline}
        intro="All of my long-form thoughts on programming, leadership, infrastructure, and more, collected in chronological order."
    >
        <div class="md:border-l md:border-zinc-100 md:pl-6 md:dark:border-zinc-700/40">
            <div class="flex max-w-3xl flex-col space-y-16">
                {articles.map((article) => <Article article={article} />)}
            </div>
        </div>
    </SimpleLayout>
</Layout>
