---
import { tools_uses } from "~/config/tools_uses";

import { Container } from "~/components/ui/container";

import Layout from "~/components/layouts/layout/index.astro";
import Heading from "~/components/elements/heading.astro";

const headline = "Software I use, gadgets I love, and other things I recommend.";
---

<Layout name="Uses" pathname="/uses" description={headline}>
    <Container class="mt-16 sm:mt-32">
        <header class="max-w-2xl">
            <Heading
                class="text-4xl font-bold tracking-tight text-zinc-800 sm:text-5xl dark:text-zinc-100"
            >
                {headline}
            </Heading>
            <p class="mt-6 text-lg text-zinc-600 dark:text-zinc-400">
                I get asked a lot about the things I use to build software, stay productive, or buy
                to fool myself into thinking I'm being productive when I'm really just
                procrastinating. Here's a big list of all of my favorite stuff.
            </p>
        </header>
        <div class="mt-16 sm:mt-20">
            <div class="space-y-20">
                {
                    tools_uses.map((section) => (
                        <section class="md:border-l md:border-zinc-100 md:pl-6 md:dark:border-zinc-700/40">
                            <div class="grid max-w-3xl grid-cols-1 items-baseline gap-y-8 md:grid-cols-4">
                                <h2 class="text-sm font-semibold text-zinc-800 dark:text-zinc-100">
                                    {section.title}
                                </h2>
                                <div class="md:col-span-3">
                                    <ul role="list" class="space-y-16">
                                        {section.items.map((item) => (
                                            <li class="group relative flex flex-col items-start">
                                                <h3 class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100">
                                                    {item.name}
                                                </h3>
                                                <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                                                    {item.description}
                                                </p>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            </div>
                        </section>
                    ))
                }
            </div>
        </div>
    </Container>
</Layout>
