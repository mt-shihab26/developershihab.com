---
import { cn } from "@/lib/utils";

import Layout from "@/components/screens/layout/Layout.astro";
---

<Layout title="404" description="Not found">
    <div class="px-4 py-10 text-center sm:px-6 lg:px-8">
        <h1 class="block text-7xl font-bold sm:text-9xl">404</h1>
        <p class="mt-3 text-muted-foreground">Oops, something went wrong.</p>
        <p>Sorry, we couldn't find your page.</p>
        <a
            class={cn(
                "inline-flex items-center gap-x-1 mt-5 rounded-lg",
                "bg-primary-foreground border border-border px-2",
                "py-1 text-sm transition-all hover:bg-input"
            )}
            href="/"
        >
            <p>Back to home</p>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="14"
                height="14"
                viewBox="0 0 24 24"
                class="-scale-x-100"
            >
                <path
                    fill="currentColor"
                    d="m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z"
                >
                </path>
            </svg>
        </a>
    </div>
</Layout>
