---
import { name } from "~/lib/info";
import { certifications, skills } from "~/lib/skills";

import SiteLayout from "~/components/layouts/site-layout/index.astro";
import Heading2 from "~/components/elements/heading2.astro";
import Subheading from "~/components/elements/subheading.astro";
---

<SiteLayout
    title={`Skills - ${name}`}
    description="A collection of my technical proficiencies and professional certifications."
>
    <Heading2>Skills</Heading2>

    <Subheading>
        I’ve worked across a range of technologies and platforms. Here are the tools and areas I’m most comfortable with
    </Subheading>

    <section class="mb-20">
        <h2 class="mb-6 text-xl font-bold tracking-tight">Technical Skills</h2>
        <ul class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            {
                skills.map((group) => (
                    <li class="rounded-xl border border-gray-200 p-5">
                        <h3 class="mb-3 text-base font-semibold text-gray-800">{group.title}</h3>
                        <ul class="flex flex-wrap gap-2">
                            {group.items.map((tech) => (
                                <li class="rounded border border-gray-200 px-2 py-0.5 text-xs">{tech.name}</li>
                            ))}
                        </ul>
                    </li>
                ))
            }
        </ul>
    </section>

    <section class="mb-16">
        <h2 class="mb-6 text-xl font-bold tracking-tight">Certifications</h2>
        <ul class="space-y-6">
            {
                certifications.map((cert) => (
                    <li class="rounded-xl border border-gray-200 p-5">
                        <h3 class="text-base font-semibold">{cert.name}</h3>
                        <p class="mt-1 text-sm">{cert.date}</p>
                        {cert.link && (
                            <div class="mt-2 text-base leading-normal">
                                <a
                                    target="_blank"
                                    href={cert.link}
                                    rel="noopener noreferrer"
                                    class="text-sm no-underline hover:text-black hover:underline"
                                >
                                    View Certificate &rarr;
                                </a>
                            </div>
                        )}
                    </li>
                ))
            }
        </ul>
    </section>
</SiteLayout>
