---
import { siteConfig } from '@/config/site';
import { allProjects } from '@/utils/projects';

import Back from '@/components/Back';
import Layout from '@/components/Layout.astro';
import Projects from '@/components/screens/projects/Projects';

const projects = await allProjects();
---

<Layout
	meta={{
		title: `Projects by ${siteConfig.author}`,
		description: "List of all projects I've did or doing"
	}}
>
	<div class="w-full">
		<Back href="/" client:load />
		<div class="flex flex-col">
			<h1 class="mb-6 mt-5 text-2xl font-bold">My Projects</h1>
			{
				projects.length === 0 ? (
					<p>No projects yet.</p>
				) : (
					<Projects projects={projects} client:load />
				)
			}
		</div>
	</div>
</Layout>
