---
import { name } from "~/lib/info";
import { experiences, educations } from "~/lib/experiences";

import SiteLayout from "~/components/layouts/site-layout/index.astro";
---

<SiteLayout
    title={`Experience - ${name}`}
    description="I've worked with various companies, building software solutions and gaining valuable experience in full-stack development."
>
    <section class="mt-12 space-y-10">
        <h2 class="mb-4 text-2xl font-extrabold text-black">Experience</h2>

        <p class="space-y-6 text-lg leading-normal">
            I've worked with various companies, building software solutions and gaining valuable experience in
            full-stack development.
        </p>

        <div class="mt-10 space-y-10">
            {
                experiences.map((exp) => (
                    <div class="space-y-3">
                        <h3 class="text-lg font-bold text-black">
                            {exp.role} at{" "}
                            <a href={exp.link} class="underline underline-offset-2" target="_blank">
                                {exp.company}
                            </a>
                        </h3>
                        <p class="text-sm">
                            {exp.start} – {exp.end}
                        </p>
                        <ul class="list-disc space-y-1 pl-1 text-sm">
                            {exp.highlights.map((point) => (
                                <li>{point}</li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>
    </section>

    <section class="mt-12 space-y-10">
        <h2 class="mb-4 text-2xl font-extrabold text-black">Education</h2>

        <p class="space-y-6 text-lg leading-normal"></p>

        <div class="mt-10 space-y-10">
            {
                educations.map((edu) => (
                    <div class="space-y-3">
                        <h3 class="text-lg font-bold text-black">
                            {edu.degree} – {edu.institution}
                        </h3>
                        <p class="text-sm">{edu.period}</p>
                        <p class="text-sm">{edu.description}</p>
                    </div>
                ))
            }
        </div>
    </section>
</SiteLayout>
