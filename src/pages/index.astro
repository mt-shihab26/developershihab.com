---
import PageLayout from '@/layouts/BaseLayout.astro';

import ContactEmail from '@/components/ContactEmail.astro';
import Card from '@/components/Card.astro';
import Button from '@/components/Button.astro';
import Section from '@/components/Section.astro';

import Intro from '@/screens/index/Intro.astro';
import About from '@/screens/index/About.astro';
import Posts from '@/screens/index/Posts.astro';
import Experience from '@/screens/index/Experience.astro';
import Eduction from '@/screens/index/Education.astro';
import Projects from '@/screens/index/Projects.astro';

import { certifications, skills } from '@/site-config';
---

<PageLayout meta={{ title: "Shihab Mahamud's Portfolio" }}>
	<div class="mb-16 flex w-full flex-col gap-y-10">
		<Intro />
		<About />
		<Posts />
		<Experience />
		<Eduction />
		<Projects />
		<Section title="Certifications">
			{
				certifications.map((certification) => (
					<Card
						as="a"
						target="_blank"
						heading={certification.heading}
						subheading={certification.subheading}
						date={certification.date}
						imagePath={certification.imagePath}
						altText={certification.altText}
						imageClass="h-11 w-auto md:-left-16"
						href={certification.href}
					/>
				))
			}
		</Section>
		<Section title="Skills">
			{
				skills.map((skill) => (
					<div class="flex flex-col gap-y-2 md:flex-row md:gap-x-5 md:gap-y-0">
						<h3 class="w-1/5 font-medium">{skill.title}</h3>
						<div class="flex w-4/5 flex-row flex-wrap gap-x-4 gap-y-2">
							{skill.tools.map((skill) => (
								<Button as="span" title={skill} style="pill" />
							))}
						</div>
					</div>
				))
			}
		</Section>
	</div>
	<ContactEmail />
</PageLayout>
